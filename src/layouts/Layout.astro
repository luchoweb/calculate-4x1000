---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Calcule el impuesto 4x1000 facilmente." />
		<meta property="og:title" content={title} />
    <meta property="og:description" content="Calcule el impuesto 4x1000 facilmente." />
    <meta property="og:url" content="https://4x1000.netlify.app" />
    <meta property="og:site_name" content={title} />
    <meta property="og:image" content="https://4x1000.netlify.app" />
    <meta property="og:image:width" content="854" />
    <meta property="og:image:height" content="571" />
    <meta property="fb:app_id" content="352618018108394" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	:root {
		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
		--color-light: hsl(0, 0%, 100%);

		--color-primary: hsl(255, 61%, 39%);
		--color-primary-dark: hsl(240, 100%, 22%);
		--color-primary-light: hsl(258, 59%, 57%);

		--color-danger: hsl(354, 100%, 90%);
		--color-danger-dark: hsl(354, 31%, 70%);
		--color-danger-text: hsl(0, 100%, 28%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: 1rem;
		color: var(--color-text);
	}

	body {
		background-color: var(--color-primary-light);
		margin: 0;
	}


</style>

<style is:global>
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
